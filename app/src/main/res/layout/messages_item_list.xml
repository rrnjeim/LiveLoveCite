<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="fr.livelovecite.push.PushMessagesListActivity"
    android:background="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/titleMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimary"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:text="Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/contentMessage"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/deleteMessage"
            android:layout_toStartOf="@+id/deleteMessage"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="3"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/deleteMessage"
            android:background="@android:drawable/ic_delete"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>