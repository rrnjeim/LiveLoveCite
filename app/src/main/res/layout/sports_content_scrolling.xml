<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nested"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.livelovecite.sidemenu.SportsActivity"
    tools:showIn="@layout/activity_sports">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView"
                android:src="@drawable/ic_email"
                android:tint="@color/colorPrimary"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="sports@ciup.fr"
                android:id="@+id/sportsEmail"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_above="@+id/line1"/>
            <View
                android:layout_width="match_parent"
                android:id="@+id/line1"
                android:layout_below="@id/imageView"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/sportsEmail"
                android:layout_alignStart="@+id/sportsEmail"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_pdf"
                android:tint="@color/colorPrimary"
                android:layout_below="@+id/line1"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginTop="8dp"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="See list"
                android:id="@+id/sportsListPDF"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="16dp"
                android:layout_alignTop="@+id/imageView2"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="match_parent"
                android:id="@+id/line2"
                android:layout_below="@id/sportsListPDF"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_alignLeft="@+id/sportsListPDF"
                android:layout_alignStart="@+id/sportsListPDF"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sports_description"
                android:autoLink="web"
                android:id="@+id/activityDescriptionDetail"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/line2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
        </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>