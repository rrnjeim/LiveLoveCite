<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nested"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ActivityDetailsActivity"
    tools:showIn="@layout/activity_details_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_action_location"
            android:tint="@color/colorPrimary"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/activityLocationDetail"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_above="@+id/line1"/>
        <View
            android:layout_width="match_parent"
            android:id="@+id/line1"
            android:layout_below="@id/imageView"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/activityLocationDetail"
            android:layout_alignStart="@+id/activityLocationDetail"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_event_start_large"
            android:tint="@color/colorPrimary"
            android:layout_below="@+id/line1"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="8dp"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Occurence"
            android:id="@+id/activityOccurenceDetail"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="16dp"
            android:layout_alignTop="@+id/imageView2"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:id="@+id/line2"
            android:layout_below="@id/activityOccurenceDetail"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_alignLeft="@+id/activityOccurenceDetail"
            android:layout_alignStart="@+id/activityOccurenceDetail"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:autoLink="web"
            android:id="@+id/activityDescriptionDetail"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/line2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>
        <Button
            android:text="Facebook page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/fbPageBTN"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/activityDescriptionDetail"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/button_outline"
            android:textColor="@color/com_facebook_blue"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/com_facebook_blue"/>
    </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>