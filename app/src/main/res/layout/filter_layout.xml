<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RadioFilter"
    android:gravity="center_vertical"
    android:layout_alignBottom="@+id/imageView22"
    android:layout_alignTop="@+id/imageReport"
    android:layout_toEndOf="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <RadioButton
        android:id="@+id/rd_1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:checked="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_gravity="right"/>

    <RadioButton
        android:id="@+id/rd_2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:checked="false"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"/>

    <RadioButton
        android:id="@+id/rd_3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:checked="false"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"/>

</RadioGroup>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageReport"
                android:src="@drawable/ic_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="36dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userReport"
            android:layout_below="@+id/imageReport"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_event_start_large"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/upcoming_events"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/imageReport"
            android:layout_toRightOf="@+id/imageReport"
            android:layout_toEndOf="@+id/imageReport"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/newly_added"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/userReport"
                android:layout_toEndOf="@+id/userReport"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:textColor="@color/colorPrimary"
            />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/most_popular"
                android:id="@+id/textView5"
                android:layout_alignTop="@+id/imageView22"
                android:layout_toEndOf="@+id/imageView22"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:textColor="@color/colorPrimary"
            />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView22"
                android:tint="@color/colorPrimary"
                android:layout_below="@+id/userReport"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_popularity"
                android:layout_marginTop="16dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sort_by"
        android:id="@+id/textView6"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:layout_marginTop="8dp"/>

</FrameLayout>