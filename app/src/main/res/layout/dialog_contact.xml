<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactEmail"
        android:layout_alignTop="@+id/emailUserBTN"
        android:layout_toRightOf="@+id/emailUserBTN"
        android:layout_toEndOf="@+id/emailUserBTN"
        android:layout_alignBottom="@+id/emailUserBTN"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_call"
        android:layout_below="@+id/emailUserBTN"
        android:layout_alignStart="@+id/emailUserBTN"
        android:id="@+id/callUserBTN"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactCall"
        android:layout_alignTop="@+id/callUserBTN"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/callUserBTN"
        android:layout_toRightOf="@+id/callUserBTN"
        android:layout_toEndOf="@+id/callUserBTN"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_message"
        android:id="@+id/messageUserBTN"
        android:layout_below="@+id/callUserBTN"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/messageUserBTN"
        android:id="@+id/contactMessage"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/messageUserBTN"
        android:layout_toRightOf="@+id/messageUserBTN"
        android:layout_toEndOf="@+id/messageUserBTN"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_email"
        android:id="@+id/emailUserBTN"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>