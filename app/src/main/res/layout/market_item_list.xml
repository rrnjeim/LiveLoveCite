<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="fr.livelovecite.homelists.MarketFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    card_view:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ownerImage3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/line1"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_user_icon"
            app:border_color="@color/colorAccent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/ownerName3"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="@string/loading"
            android:layout_alignTop="@+id/ownerImage3"
            android:layout_toRightOf="@+id/ownerImage3"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            />

        <View
            android:layout_width="match_parent"
            android:id="@+id/line1"
            android:layout_below="@id/ownerImage3"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/itemTitle"
            android:layout_alignStart="@+id/itemTitle"
            android:layout_alignRight="@+id/itemTitle"
            android:layout_alignEnd="@+id/itemTitle"
            />

        <FrameLayout
            android:id="@+id/buzz"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/itemPrice"
            >

            <ImageView
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_image"
                android:tint="@color/colorPrimary"
                android:weightSum="5"/>

            <ImageView
                android:id="@+id/ItemImage"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:weightSum="5"/>

        </FrameLayout>

        <TextView
            android:id="@+id/itemPublicationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itemPrice"
            android:layout_alignBottom="@+id/itemPrice"
            android:layout_alignLeft="@+id/itemTitle"
            android:layout_alignStart="@+id/itemTitle"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/backgroundTransparent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/itemTitle"
            android:layout_below="@+id/itemTitle"
            android:layout_toEndOf="@+id/itemPublicationDate"
            android:layout_toRightOf="@+id/itemPublicationDate"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/itemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ownerName3"
            android:layout_alignLeft="@+id/ownerName3"
            android:layout_alignRight="@+id/ownerName3"
            android:layout_alignStart="@+id/ownerName3"
            android:layout_below="@+id/ownerName3"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:lines="1"
            />

        <Button
            android:id="@+id/contactMarketButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/ItemDescription"
            android:layout_alignLeft="@+id/ItemDescription"
            android:layout_alignRight="@+id/ItemDescription"
            android:layout_alignStart="@+id/ItemDescription"
            android:layout_below="@+id/ItemDescription"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_outline_primary"
            android:gravity="center"
            android:text="@string/contact"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/line1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/ItemDescription"
            android:textColor="@color/colorPrimary"
            android:text="@string/loading"
            android:textSize="12sp"
            android:layout_below="@+id/buzz"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/itemPublicationDate"
            android:layout_alignStart="@+id/itemPublicationDate"
            android:layout_alignRight="@+id/itemPublicationDate"
            android:layout_alignEnd="@+id/itemPrice"
            />

        <ImageButton
            android:id="@+id/reportBTN"
            android:backgroundTint="@color/transparent"
            app:srcCompat="@drawable/ic_report"
            android:tint="@color/colorPrimary"
            android:layout_alignTop="@+id/ownerName3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>