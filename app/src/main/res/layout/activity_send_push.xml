<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@android:color/white">


    <EditText
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/messageField"
                android:hint="Message..."
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:background="@drawable/button_outline_primary"
                android:scrollHorizontally="false"
                android:padding="4dp"
                android:textColorHint="@color/colorPrimary"
                android:layout_below="@+id/titleField"
                android:layout_above="@+id/sendBTN"
                android:layout_margin="16dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:id="@+id/sendBTN"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_outline_primary"
        android:layout_marginBottom="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleField"
        android:hint="Titre"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        android:textColorHint="@color/colorPrimary"
        android:gravity="center"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/toolbar"
        android:layout_alignRight="@+id/messageField"
        android:layout_alignEnd="@+id/messageField"
        android:layout_alignLeft="@+id/messageField"
        android:layout_alignStart="@+id/messageField"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_toolbar_translucent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


</RelativeLayout>