<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/nested"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".homelists.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorPrimary"
                android:id="@+id/imageView"
                android:src="@drawable/ic_action_location" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location"
                android:id="@+id/eventLocationDetail"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:id="@+id/line1"
                android:layout_below="@id/imageView"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/eventLocationDetail"
                android:layout_alignStart="@+id/eventLocationDetail"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_event_start_large"
                android:layout_below="@+id/line1"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/eventStartDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignLeft="@+id/eventLocationDetail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView"
                android:gravity="center_vertical"
                android:text="StartDate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>
            <View
                android:layout_width="match_parent"
                android:id="@+id/line2"
                android:layout_below="@id/imageView2"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/eventStartDetail"
                android:layout_alignStart="@+id/eventStartDetail"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_event_end"
                android:layout_below="@+id/line2"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="EndDate"
                android:gravity="center_vertical"
                android:id="@+id/eventEndDetail"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/eventStartDetail"
                android:layout_alignStart="@+id/eventStartDetail"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignBottom="@+id/imageView3"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:id="@+id/line3"
                android:layout_below="@id/imageView3"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/eventEndDetail"
                android:layout_alignStart="@+id/eventEndDetail"/>

            <ImageView
                android:id="@+id/imageView24"
                android:tint="@color/colorPrimary"
                android:layout_below="@+id/line3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_money"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Price"
                android:gravity="center_vertical"
                android:id="@+id/eventPrice"
                android:layout_alignTop="@+id/imageView24"
                android:layout_alignLeft="@+id/eventEndDetail"
                android:layout_alignStart="@+id/eventEndDetail"
                android:textColor="@color/colorAccent"
                android:layout_alignBottom="@+id/imageView24"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:id="@+id/line4"
                android:layout_below="@id/imageView24"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/eventPrice"
                android:layout_alignStart="@+id/eventPrice"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:autoLink="web"
                android:id="@+id/eventDescriptionDetail"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/line4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>

        </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>