<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="fr.livelovecite.uplaods.UploadEventsActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:fillViewport="false"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/relativeLayout"
            android:gravity="top"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/fbLink"
                android:hint="Paste Facebook Event url here..."
                android:textSize="18sp"
                android:textAlignment="textStart"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/frame"
                android:layout_below="@+id/fbLink"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/uploadEventImageBUZZ"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_image"
                    android:backgroundTint="@color/colorPrimary"/>

            </FrameLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/eventTitle"
                android:hint="@string/title"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/frame"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/addImageBTN"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:lines="1"/>
            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/addImageBTN"
                android:src="@drawable/ic_camera"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/eventTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:background="@color/transparent"
/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="MM/DD/YYYY"
                android:id="@+id/eventDateStart"
                android:layout_alignLeft="@+id/houseList"
                android:layout_alignStart="@+id/houseList"
                android:textColor="@color/colorPrimary"
                android:layout_alignTop="@+id/imageView13"
                android:layout_alignBottom="@+id/imageView13"
                android:textSize="14sp"
                android:lines="1"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/imageView14"
                android:layout_toLeftOf="@+id/imageView14"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView15"
                android:layout_below="@+id/imageView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_event_end"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="--:--"
                android:id="@+id/eventTimeEnd"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:lines="1"
                android:layout_alignTop="@+id/imageView16"
                android:layout_alignBottom="@+id/imageView16"
                android:gravity="center_vertical"
                android:layout_alignLeft="@+id/eventTimeStart"
                android:layout_alignStart="@+id/eventTimeStart"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrance_fee"
                android:id="@+id/PayableSwitch"
                android:checked="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageView17"
                android:layout_alignBottom="@+id/imageView17"
                android:layout_alignLeft="@+id/eventDateEnd"
                android:layout_alignStart="@+id/eventDateEnd"/>

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/eventPriceInt"
                android:textColor="@color/colorPrimary"
                android:hint="@string/price"
                android:layout_below="@+id/PayableSwitch"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="100dp"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView17"
                android:src="@drawable/ic_money"
                android:tint="@color/colorPrimary"
                android:layout_below="@+id/imageView15"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView18"
                android:src="@drawable/ic_lock"
                android:tint="@color/colorPrimary"
                android:layout_below="@+id/imageView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView13"
                android:src="@drawable/ic_event_start_large"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/imageView18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_event"
                android:id="@+id/PrivacySwitch"
                android:textOn="@string/public_event"
                android:textOff="@string/private_event"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/houseList"
                android:layout_alignStart="@+id/houseList"
                android:layout_alignBottom="@+id/imageView18"
                android:checked="true"
                android:lines="1"
                android:layout_alignTop="@+id/imageView18"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ItemDescription"
                android:textColor="@color/colorPrimary"
                android:hint="@string/description"
                android:textIsSelectable="true"
                android:layout_below="@+id/eventPriceInt"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:background="@drawable/button_outline_primary"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"/>

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/eventPriceExt"
                android:textColor="@color/colorPrimary"
                android:hint="@string/price_for_exteriors"
                android:layout_alignBottom="@+id/eventPriceInt"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="170dp"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView12"
                android:src="@drawable/ic_action_location"
                android:tint="@color/colorPrimary"
                android:layout_below="@+id/addImageBTN"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="36dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/maison_arrays"
                android:prompt="@string/maison_prompt"
                android:id="@+id/houseList"
                android:spinnerMode="dialog"
                android:gravity="center|start"
                android:layout_above="@+id/imageView18"
                android:layout_alignRight="@+id/addImageBTN"
                android:layout_alignEnd="@+id/addImageBTN"
                android:layout_toRightOf="@+id/imageView12"
                android:layout_toEndOf="@+id/imageView12"
                android:layout_marginLeft="16dp"
                android:layout_alignTop="@+id/imageView12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MM/DD/YYYY"
                android:id="@+id/eventDateEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:lines="1"
                android:gravity="center_vertical"
                android:layout_alignLeft="@+id/eventDateStart"
                android:layout_alignStart="@+id/eventDateStart"
                android:layout_alignTop="@+id/imageView15"
                android:layout_above="@+id/imageView17"
                android:layout_toLeftOf="@+id/imageView16"
                android:layout_toStartOf="@+id/imageView16"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView14"
                android:src="@drawable/ic_time"
                android:tint="@color/colorPrimary"
                android:layout_alignTop="@+id/eventDateStart"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="--:--"
                android:id="@+id/eventTimeStart"
                tools:ignore="HardcodedText"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:lines="1"
                android:gravity="center_vertical"
                android:layout_alignTop="@+id/imageView14"
                android:layout_toRightOf="@+id/imageView14"
                android:layout_alignBottom="@+id/imageView14"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView16"
                android:src="@drawable/ic_time"
                android:tint="@color/colorPrimary"
                android:layout_alignTop="@+id/imageView15"
                android:layout_toRightOf="@+id/eventDateStart"
                android:layout_toEndOf="@+id/eventDateStart"/>

        </RelativeLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="?attr/actionBarSize"
                                       app:titleTextColor="@android:color/white"
                                       android:background="@drawable/background_toolbar_translucent"
                                       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                       android:layout_alignParentTop="true"
                                       android:layout_alignParentLeft="true"
                                       android:layout_alignParentStart="true" >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doneBTN"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_upload"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteBTN"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete"
        android:layout_alignTop="@+id/doneBTN"
        android:layout_toLeftOf="@+id/doneBTN"
        android:layout_alignBottom="@+id/doneBTN"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"/>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
